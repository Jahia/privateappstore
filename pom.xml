<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0                       http://maven.apache.org/xsd/maven-4.0.0.xsd">  
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>jahia-modules</artifactId>
        <groupId>org.jahia.modules</groupId>
        <version>7.0.0.0-SNAPSHOT</version>
    </parent>
    <artifactId>private-app-store</artifactId>
    <name>Jahia Private App Store</name>
    <version>2.0-SNAPSHOT</version>
    <packaging>bundle</packaging>
    <description>This is the custom module (Private App Store) for running on a Jahia server.</description>
    <scm>
        <connection>scm:git:git@github.com:Jahia/forge.git</connection>
        <url>scm:git:git@github.com:Jahia/forge.git</url>
        <developerConnection>scm:git:git@github.com:Jahia/forge.git</developerConnection>
    </scm>
    <repositories>
        <repository>
            <id>jahiaRepository</id>
            <name>Jahia's Maven Repository</name>
            <url>http://maven.jahia.org/maven2</url>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>jahiaRepository</id>
            <name>Jahia's Maven Repository</name>
            <url>http://maven.jahia.org/maven2</url>
        </pluginRepository>
    </pluginRepositories>
    <dependencies>
        <dependency>
            <groupId>atg.taglib.json</groupId>
            <artifactId>json-taglib</artifactId>
            <version>0.4.1</version>
            <scope>compile</scope>
            <exclusions>
                <exclusion>
                    <groupId>commons-el</groupId>
                    <artifactId>commons-el</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
            <Jahia-Depends>bootstrap,bootstrap-components,default,facets,rating,siteSettings,templates-private-app-store,videostreaming</Jahia-Depends>
                        <Jahia-Module-Type>module</Jahia-Module-Type>
            <Embed-Dependency>*; scope=compile; type=!pom; inline=false</Embed-Dependency> 
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.jahia.server</groupId>
                <artifactId>jahia-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>package-importsite</id>
                        <configuration>
                            <src>${basedir}/src/main/importsite-private-app-store</src>
                            <dest>${project.build.directory}/${project.build.finalName}/META-INF</dest>
                            <archiveName>importsite-private-app-store.zip</archiveName>
                        </configuration>
                        <goals>
                            <goal>package-imports</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
