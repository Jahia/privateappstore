<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean class="org.jahia.modules.forgeModules.actions.AddModule" >
        <property name="name" value="AddModule"/>
        <property name="requireAuthenticatedUser" value="true"/>
    </bean>

    <bean class="org.jahia.modules.forgeModules.actions.AddModuleRelease" >
        <property name="name" value="AddModuleRelease"/>
        <property name="requireAuthenticatedUser" value="true"/>
    </bean>
</beans>